<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/loyalty">

    <TextView
            android:layout_width="200dp"
            android:textColor="#FFFFFF"
            android:layout_height="40dp"
            android:id="@+id/textwelcome" android:textSize="20dp"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Logout"
            android:id="@+id/logout"
            android:textSize="13dp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/btchangepass"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:id="@+id/lname"
            android:layout_alignParentTop="true"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/textwelcome"
            android:textSize="20dp"/>

    <Button
        android:id="@+id/btchangepass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textwelcome"
        android:text="Change Password"
        android:textColor="#FFFFFF"
        android:textSize="13dp" />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="User Panel"
            android:id="@+id/textView" android:layout_below="@+id/logout" android:layout_alignParentRight="true"
            android:textSize="18dp" android:textColor="#FFFFFF" android:textAlignment="center"/>

</RelativeLayout>